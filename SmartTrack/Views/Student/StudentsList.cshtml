@{
    ViewBag.Title = "Student List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<SmartTrack.Models.Students>

<h1>Student Record</h1>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Enrolled</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var students in Model)
        {
            <tr>
                <td>@students.Id</td>
                <td>@students.FirstName</td>
                <td>@students.MiddleName</td>
                <td>@students.LastName</td>
                <td>@students.Email</td>
                <td>@students.Phone</td>
                <td>@(students.Enrolled ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-primary" asp-action="EditStudent" asp-route-id="@students.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 text-center">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Admin">Back</a>
    <a class="btn btn-success ms-1" asp-action="AddStudent">Add Student</a>
</div>
