@{
    ViewBag.Title = "Edit Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model SmartTrack.Models.Students

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No student was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" required asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" required asp-for="FirstName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Middle Name</label>
            <input type="text" class="form-control" required asp-for="MiddleName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" required asp-for="LastName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" required asp-for="Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="tel" class="form-control" required asp-for="Phone" />
        </div>
        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Enrolled" asp-for="Enrolled" />
            <label class="form-check-label" for="Enrolled">Enrolled</label>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-1" asp-action="DeleteStudent" asp-controller="Student">Delete</button>
        </div>
    </form>
}

<div class="mt-3 text-center">
    <a class="btn btn-primary" asp-controller="Student" asp-action="StudentsList">Back</a>
</div>
