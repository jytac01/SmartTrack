@{
    ViewBag.Title = "Create Class";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using SmartTrack.ViewModels
@model CreateClassViewModel

<h2>Create New Class</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Subject</label>
        <input type="text" class="form-control" required asp-for="Subject" />
    </div>

    <div class="mt-3">
        <label class="form-label">Day</label>
        <input type="text" class="form-control" required asp-for="ClassDay" />
    </div>

    <div class="mt-3">
        <label class="form-label">Time</label>
        <input type="time" class="form-control" required asp-for="ClassTime" />
    </div>

    <div class="mt-3">
        <label class="form-label">Room</label>
        <input type="text" class="form-control" required asp-for="Room" />
    </div>

    <div class="mt-3">
        <label class="form-label">Teacher</label>
        <input type="text" class="form-control" required asp-for="Teacher" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<div class="mt-3 text-center">
    <a class="btn btn-secondary mb-3" asp-controller="Class" asp-action="Class">Back</a>
</div>
