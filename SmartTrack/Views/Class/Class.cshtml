@model List<SmartTrack.Models.Class>
@{
    ViewBag.Title = "Class List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Class Schedule</h2>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Day</th>
            <th>Time</th>
            <th>Room</th>
            <th>Teacher</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classEntities in Model)
        {
            <tr>
                <td>@classEntities.Subject</td>
                <td>@classEntities.ClassDay</td>
                <td>@classEntities.ClassTime</td>
                <td>@classEntities.Room</td>
                <td>@classEntities.Teacher</td>
                <td>
                    <a class="btn btn-primary" asp-action="EditClass" asp-route-id="@classEntities.ClassId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3 text-center">
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Admin">Back</a>
    <a class="btn btn-success ms-1" asp-action="CreateClass">Create Class</a>
</div>
