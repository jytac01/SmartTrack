﻿@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<SmartTrack.Models.Class>

<div class="text-center">
    <h1>Class Schedule</h1>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Class Id</th>
                <th>Subject</th>
                <th>Day</th>
                <th>Time</th>
                <th>Room</th>
                <th>Teacher</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classEntities in Model)
            {
                <tr>
                    <td>@classEntities.ClassId</td>
                    <td>@classEntities.Subject</td>
                    <td>@classEntities.ClassDay</td>
                    <td>@classEntities.ClassTime</td>
                    <td>@classEntities.Room</td>
                    <td>@classEntities.Teacher</td>
                </tr>
            }
        </tbody>
    </table>
</div>

